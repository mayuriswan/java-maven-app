#!/usr/bin/env groovy
pipeline {
    agent any
    
    stages {
        stage('build jar') {
            steps {
                script {
                    echo "Building the application..."}
                   
                }
            }
        }
        stage('build image ') {
           
            steps {
                script {
                    echo "building image  application..."
                   
                    }
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    sshagent(['docker-server']) {
                        def dockerCmd = 'docker run -p 3000:3080 -d mayuriswan/demo-app:node-1.0'
                        sh "ssh -o StrictHostKeyChecking=no ec2-user@35.180.39.170 ${dockerCmd}"
                                }   
         
                }
            }
        }
    }
 
}
