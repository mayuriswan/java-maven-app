#!/usr/bin/env groovy
pipeline {
    agent any
    
    stages {
        stage('build jar') {
            steps {
                script {
                    echo "Building the application..."
                    sh 'mvn package'
                }
            }
        }
        stage('build image ') {
           
            steps {
                script {
                    echo "building image  application..."
                    withCredentials([usernamePassworf(credentialId:'docker-hub',passwordVariable:'PASS',usernameVariable:'USER')]){
                        sh 'docker build -t mayuriswan/my-repo:2.0 .'
                        sh 'echo $PASS | docker login -u USER -password-stdin'
                        sh 'docker push  mayuriswan/my-repo:2.0 '
                    }
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    echo "Deploying the application..."
                }
            }
        }
    }
 
}
