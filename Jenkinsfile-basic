#!/usr/bin/env groovy
pipeline {
    agent any
    
    stages {
        stage('build jar') {
            steps {
                script {
                    echo "Building the application..."
                    sh 'mvn package'
                }
            }
        }
        stage('build image ') {
           
            steps {
                script {
                    echo "building image  application..."
                    withCredentials([usernamePassword(credentialsId:'docker-hub',passwordVariable:'PASS',usernameVariable:'USER')]){
                        sh 'docker build -t mayuriswan/my-repo:2.0 .'
                        sh 'echo $PASS | docker login -u $USER --password-stdin'
                        sh 'docker push  mayuriswan/my-repo:2.0 '
                    }
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    sshagent(['docker-server']) {
                        def dockerCmd = 'docker run -p 3000:3080 -d mayuriswan/demo-app:node-1.0'
                        sh "ssh -o StrictHostKeyChecking=no ec2-user@35.180.39.170 ${dockerCmd}"
                                }   
         
                }
            }
        }
    }
 
}
