#!/usr/bin/env groovy

pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                script {
                    echo "Building the application..."
                }
            }
        }
        stage('test') {
            steps {
                script {
                    echo "Testing the application..."
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    echo "Deploying the application..."
                    script {
                    sshagent(['docker-server1']) {
                        def dockerCmd = 'docker-compose -f docker-compose.yaml --detach'
                        sh " scp docker-compose.yaml ec2-user@35.180.39.170:/home/ec2-user"
                        sh "ssh -o StrictHostKeyChecking=no ec2-user@35.180.39.170 ${dockerCmd}"
                                }   
         
                }
                }
            }
        }
    }
}

















